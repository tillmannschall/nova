<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<!-- Parent POM contains all general settings for building and releasing 
		of all JEAF projects. -->
	<parent>
		<groupId>ch.voev.nova.api</groupId>
		<artifactId>nova-api-project</artifactId>
		<version>0.0.1-SNAPSHOT</version>
	</parent>

	<name>NOVA API OpenAPI</name>
	<artifactId>nova-api-openapi</artifactId>
	<packaging>jar</packaging>

	<dependencies>
		<dependency>
			<groupId>ch.voev.nova.api</groupId>
			<artifactId>nova-api-model</artifactId>
			<version>${project.version}</version>
			<type>zip</type>
			<scope>provided</scope>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>com.anaptecs.jeaf.maven</groupId>
				<artifactId>jeaf-maven-plugin</artifactId>
				<version>${maven.jeaf-plugin.version}</version>
				<executions>
					<execution>
						<id>Clean</id>
						<goals>
							<goal>GenerateJEAFConfig</goal>
						</goals>
						<phase>clean</phase>
						<configuration>
							<resourceGenDirectory>${basedir}/src-gen/main/resources</resourceGenDirectory>
							<cleanMetaInfDirectory>true</cleanMetaInfDirectory>
							<cleanOnly>true</cleanOnly>
						</configuration>
					</execution>
					<execution>
						<id>GenerateConfigs</id>
						<goals>
							<goal>GenerateJEAFConfig</goal>
						</goals>
						<configuration>
							<resourceGenDirectory>${basedir}/src-gen/main/resources</resourceGenDirectory>
							<createVersionInfo>true</createVersionInfo>
							<detectActivities>false</detectActivities>
							<detectAppInfo>false</detectAppInfo>
							<detectComponentFactories>false</detectComponentFactories>
							<detectConfigurationProviderConfig>false</detectConfigurationProviderConfig>
							<detectCoreConfig>false</detectCoreConfig>
							<detectCoreFactory>false</detectCoreFactory>
							<detectDatatypeConverterImpls>false</detectDatatypeConverterImpls>
							<detectEJBClientServiceChannelConfig>false</detectEJBClientServiceChannelConfig>
							<detectEJBContainerConfig>false</detectEJBContainerConfig>
							<detectFastLaneConfig>false</detectFastLaneConfig>
							<detectLifecycleManagerFactory>false</detectLifecycleManagerFactory>
							<detectMessageResources>false</detectMessageResources>
							<detectModuleFactories>false</detectModuleFactories>
							<detectObjectMapperConfig>false</detectObjectMapperConfig>
							<detectPersistenceConfig>false</detectPersistenceConfig>
							<detectPipelineConfig>false</detectPipelineConfig>
							<detectRuntimeInfo>false</detectRuntimeInfo>
							<detectSchedulerCredentials>false</detectSchedulerCredentials>
							<detectSchedulingConfig>false</detectSchedulingConfig>
							<detectSecurityConfig>false</detectSecurityConfig>
							<detectServiceProviderFactories>false</detectServiceProviderFactories>
							<detectStartupInfoConfig>false</detectStartupInfoConfig>
							<detectStartupInfoWriterImpl>false</detectStartupInfoWriterImpl>
							<detectToolsConfig>false</detectToolsConfig>
							<detectTraceConfig>false</detectTraceConfig>
							<detectTraceObjectFormatter>false</detectTraceObjectFormatter>
							<detectWorkloadManagerConfig>false</detectWorkloadManagerConfig>
							<detectWorkloadMappings>false</detectWorkloadMappings>
							<detectXFunConfig>false</detectXFunConfig>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<groupId>com.anaptecs.jeaf.generator</groupId>
				<artifactId>jeaf-generator-maven-plugin</artifactId>
				<version>1.6.18-SNAPSHOT</version>
				<executions>
					<execution>
						<goals>
							<goal>Generator</goal>
						</goals>
						<phase>generate-sources</phase>
					</execution>
				</executions>
				<configuration>
					<!-- Define input files and directories where output should be write 
						to. -->
					<modelArtifactGroupID>ch.voev.nova.api</modelArtifactGroupID>
					<modelArtifactArtifactID>nova-api-model</modelArtifactArtifactID>
					<modelArtifactXMIPath>xmi</modelArtifactXMIPath>

					<umlModelFile>NOVA.uml</umlModelFile>
					<sourceDirectory>${project.basedir}/src-gen/main/java</sourceDirectory>
					<sourceGenDirectory>${project.basedir}/src-gen/main/java</sourceGenDirectory>
					<resourceDirectory>${project.basedir}/src-gen/main/resources</resourceDirectory>
					<resourceGenDirectory>${project.basedir}/src-gen/main/resources</resourceGenDirectory>

					<!-- Configure behavior concerning existing files in src-gen and res-gen 
						directory. It is strongly recommended to clean directories before generating 
						new files. -->
					<cleanSourceGen>true</cleanSourceGen>
					<cleanResourceGen>true</cleanResourceGen>

					<!-- Define whitelist of package in UML model generator should take 
						care when generating code. -->
					<packages>
						<package>ch.voev.nova</package>
					</packages>

					<!-- Define what should be generated. By default nothing is generated. -->
					<generateOpenAPISpec>true</generateOpenAPISpec>
					<!-- <generateServiceObjects>true</generateServiceObjects> <generateCustomConstraints>true</generateCustomConstraints> -->

					<!-- Define information that are written to file headers -->
					<fileHeaderCompany>${headerCompany}</fileHeaderCompany>
					<fileHeaderAuthor>${headerAuthor}</fileHeaderAuthor>
					<fileHeaderCopyright>${headerCopyright}</fileHeaderCopyright>
					<fileHeaderVersion>${headerVersion}</fileHeaderVersion>

					<!-- Define code formatting style -->
					<!-- <conventionFile>anaptecs_code_guideline.xml</conventionFile> -->
				</configuration>
			</plugin>

		</plugins>
		<pluginManagement>
			<plugins>
				<!--This plugin's configuration is used to store Eclipse m2e settings 
					only. It has no influence on the Maven build itself. -->
				<plugin>
					<groupId>org.eclipse.m2e</groupId>
					<artifactId>lifecycle-mapping</artifactId>
					<version>1.0.0</version>
					<configuration>
						<lifecycleMappingMetadata>
							<pluginExecutions>
								<pluginExecution>
									<pluginExecutionFilter>
										<groupId>
											com.anaptecs.jeaf.generator
										</groupId>
										<artifactId>
											jeaf-generator-maven-plugin
										</artifactId>
										<versionRange>
											[1.6.16,)
										</versionRange>
										<goals>
											<goal>Generator</goal>
										</goals>
									</pluginExecutionFilter>
									<action>
										<ignore></ignore>
									</action>
								</pluginExecution>
							</pluginExecutions>
						</lifecycleMappingMetadata>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>
</project>